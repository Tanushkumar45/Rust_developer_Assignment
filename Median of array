fn find_median(arr: &[i32]) -> f64 {
  let len = arr.len();
  if len % 2 == 0 {
    let mid1 = arr[len / 2 - 1];
    let mid2 = arr[len / 2];
    (mid1 as f64 + mid2 as f64) / 2.0
  } else {
    arr[len / 2] as f64
  }
}

fn main() {
  let numbers = vec![1, 2, 3, 4, 5];
  let median = find_median(&numbers);
  println!("Median: {}", median);
}
